<h1>My Invitations</h1>

<%= link_to "Create new invites", new_invitation_path %>

<h2>Invitations Received:</h2>
<ul>
  <% @invitations.select { |invitation| invitation.invitee == current_user }.each do |invitation| %>
    <li><%= link_to invitation.invited_event.name, invitation.invited_event %></li>
  <% end %>
</ul>

