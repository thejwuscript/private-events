<h1>List of Events In Town</h1>

<ul>
  <% @events.each do |event| %>
    <li>
      <a href="<%= event_path(event) %>">
        <%= event.name %>
      </a>
    </li>
  <% end %>
</ul>

<% if user_signed_in? %>
  <p>Logged in as: <%= current_user.name %></p>
  <%= button_to "Sign Out", destroy_user_session_path, method: :delete, data: { turbo: false } %>
<% else %>
  <%= link_to "Sign In", new_user_session_path %><br>
  <%= link_to "Sign Up", new_user_registration_path %><br>
<% end %>

<p>Bug: Hosts should not be able to attend own event.</p>
